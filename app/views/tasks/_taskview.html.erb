<li id="<%= dom_id(task) %>" class="list-group-item">
  <div class="row-mb-1">
    <%= task.content %>
  </div>
  
  <div class ="row">
    <div class="col-md-4">
      <div class="d-grid gap-2">
        <% if task.status=="not_yet_started" %>
          <%= link_to forward_task_path(task), method: :patch, remote: true, class: "btn
            btn-outline-secondary" do %>
            <i class="fa-regular fa-circle-play"></i>
          <% end %>        
        <% elsif task.status=="completed" %>
          <%= link_to back_task_path(task), method: :patch, remote: true, class: "btn btn-outline-secondary" do %>
            <i class="fa-solid fa-backward"></i>
          <% end %>
        <% else %>  
          <%= link_to forward_task_path(task), method: :patch, remote: true, class: "btn
            btn-outline-secondary" do %>
            <i class="fa-regular fa-circle-check"></i>
          <% end %>  
        <% end %>
      </div>
    </div>





    <div class="col-md-4">
      <div class="d-grid gap-3">
        <%= link_to edit_task_path(task), class: "btn btn-outline-secondary", remote: true  do %>
        <i class="fa-regular fa-pen-to-square"></i>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="d-grid gap-3">
        <%= link_to task, method: :delete, class: "btn btn-outline-secondary",
        remote: true do %>
        <i class="fa-regular fa-trash-can"></i>
        <% end %>
      </div>
    </div>
  </div>
  
</li>
