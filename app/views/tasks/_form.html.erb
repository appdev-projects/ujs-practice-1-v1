<li id="<%= dom_id(task) %>_form" class="list-group-item">
<%= form_with(model: task, local: false) do |form| %>
  <div class="mb-3">
    <%= form.label :content, class: "visually-hidden" %>
    <%= form.text_field :content, class: "form-control", rows: "2"%>
  </div>
  <div>
  <div class="d-grid">
    <%= form.submit class: "btn btn-primary" %>
  </div>
  </div>
<% end %>
</li>
