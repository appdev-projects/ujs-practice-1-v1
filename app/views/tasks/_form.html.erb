<li id="<%= dom_id task, :form %>" class="list-group-item">
<%= form_with(model: task) do |form| %>
  <div class="field">
    <%= form.label :content, class: "visually-hidden" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div>
    <div class="d-grid">
      <%= form.submit class: "btn btn-success" %>
    </div>
  </div>
<% end %>
