<li id="<%= dom_id(task) %>" class="list-group-item">
  <%= task.body %>

  <div class="row">
    <div class="col-md-4">
      <div class="d-grid gap-2">
        <%= link_to 'Show', task %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="d-grid gap-2">
        <%= link_to edit_task_path(task), class: "btn btn-link" do %>
          <i class="fa-sharp fa-solid fa-pen-to-square"></i>
        <% end %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="d-grid gap-2">
        <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
</li>
