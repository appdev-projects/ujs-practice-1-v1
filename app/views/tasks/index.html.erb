<div class="container">
  <div class="row row-cols-3 g-3 mt-5">
    <div class="col">
      <div class="card border-dark rounded">
        <div class="card-header bg-warning text-white">
          Not yet started
        </div>
        <ul class="list-group list-group-flush">
      <% current_user.tasks.not_started.each do |t| %>
        <li class="list-group-item">
          <%= t.content %>
        </li>
      <% end %>
        </ul>
      </div>
    </div>
    <div class="col">
      <div class="card border-dark rounded">
        <div class="card-header bg-info text-white">
          In progess
        </div>
        <ul class="list-group list-group-flush">
      <% current_user.tasks.in_progress.each do |t| %>
        <li class="list-group-item">
          <%= t.content %>
        </li>
      <% end %>
        </ul>
      </div>
    </div>
    <div class="col">
      <div class="card border-dark rounded">
        <div class="card-header bg-success text-white">
          Completed
        </div>
        <ul class="list-group list-group-flush">
      <% current_user.tasks.completed.each do |t| %>
        <li class="list-group-item">
          <%= t.content %>
        </li>
      <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
