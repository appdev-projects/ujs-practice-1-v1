<div class="container text-left">
  <div class="row align-items-start">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          Not yet started
        </div>
        <ul class="list-group list-group-flush">
          <% current_user.tasks.not_yet_started.each do |task| %>
            <%= render "tasks/task", task: task %>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          In progress
        </div>
        <ul class="list-group list-group-flush">
          <% current_user.tasks.in_progress.each do |task| %>
            <%= render "tasks/task", task: task %>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          Completed
        </div>
        <ul class="list-group list-group-flush">
          <% current_user.tasks.completed.each do |task| %>
            <%= render "tasks/task", task: task %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Status</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user.email %></td>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

